{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:allNonMajor",
        ":semanticCommitTypeAll(chore)",
        ":meteor",
        "schedule:quarterly"
    ],
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "description": "Ignore engines",
            "matchPackageNames": [
                "node"
            ],
            "matchDepTypes": [
                "engines"
            ],
            "rangeStrategy": "auto"
        },
        {
            "groupName": "actions",
            "matchManagers": ["github-actions"]
        }
    ],
    "ignoreDeps": [
        "node"
    ],
    "assigneesFromCodeOwners": true
}
