{
    "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
    "compilerOptions": {
        "outDir": "build",
        "sourceMap": true,
        "resolveJsonModule": true,
        "declaration": true,
        "noUncheckedIndexedAccess": false,
        "moduleResolution": "NodeNext",
        "module": "NodeNext"
    },
    "include": [
        "src/**/*"
    ]
}